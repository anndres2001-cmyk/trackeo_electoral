# =============================================================================
# I. HERRAMIENTA DE SELECCI√ìN (MEN√öS NUM√âRICOS)
# =============================================================================

def listar_y_elegir(lista_opciones, mensaje="Seleccion√° una opci√≥n"):
    """Muestra un men√∫ num√©rico y devuelve el valor real elegido."""
    print(f"\n--- {mensaje} ---")
    for i, op in enumerate(lista_opciones):
        # Si es una tupla (Nombre, Explicaci√≥n), mostramos lindo
        if isinstance(op, tuple):
            print(f"[{i}] {op[0]}")
        else:
            print(f"[{i}] {op}")
    
    while True:
        try:
            inp = input("üëâ Ingres√° el n√∫mero: ")
            idx = int(inp)
            if 0 <= idx < len(lista_opciones):
                val = lista_opciones[idx]
                return val[0] if isinstance(val, tuple) else val
            print("‚ùå N√∫mero fuera de rango.")
        except ValueError:
            print("‚ùå Por favor, escrib√≠ un n√∫mero entero.")

